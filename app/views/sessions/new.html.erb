<h1 class="sign-in">Sign In</h1>

<div class="form-horizontal">
  <%= form_tag sessions_path, method: :post do %>

    <div class="form-group">
     <%= label_tag :username, "Username:", class: "col-xs-4 control-label required" %>
      <div class="col-xs-4">
        <%= text_field_tag :username, "", class: "form-control" %>
      </div>
    </div>
    <br>

    <div class="form-group">
      <%= label_tag :password, "Password (secret):", class: "col-xs-4 control-label required" %>
      <div class="col-xs-4">
        <%= password_field_tag :password, "", class: "form-control" %>
      </div>
    </div>
    <div class="text-center">
      <%= submit_tag "Sign In", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
