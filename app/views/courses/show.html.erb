<div class="container">
  <h2 class="course-heading">Coursera Results</h2>
  <% if @coursera_results.empty? %>
    <h4>No courses from Coursera found!</h4>
  <% else %>
    <% @coursera_results.each do |course| %>
    <div class="row course-row">
      <div class="col-md-8 course-info">
        <h4><%= course["name"] %></h4><br>
        <%= description_match(course["description"]) %><br><br>
        <%= link_to "Find this on Coursera", coursera_search_link + course["name"], :target => "_blank", class: "course-links" %>
        </div>
        <div class="col-md-4">
          <%= image_tag course["photoUrl"], class: "img-responsive center-block course-img" %>
        </div>
      </div>
      <% end %>
    <% end %>
</div>
<br>
